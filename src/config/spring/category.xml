<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-3.0.xsd
      "
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context">

	<bean class="com.epublib.category.dao.CategoryDaoImpl" id="categoryDao">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean class="com.epublib.category.service.CategoryServiceImpl" id="categoryServiceImpl">
		<property name="categoryDao">
			<ref bean="categoryDao" />
		</property>
	</bean>

	<bean id="categoryService" parent="transactionProxy">
		<property name="target">
			<ref bean="categoryServiceImpl" />
		</property>
	</bean>
</beans>
